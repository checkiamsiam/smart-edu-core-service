{
  "name": "smart-edu-auth-service",
  "version": "1.0.0",
  "description": "SmartEdu: Streamlined Education Management Software",
  "main": "src/index.js",
  "scripts": {
    "dev": "set NODE_ENV=development&&ts-node-dev --files --rs --poll ./src/index.ts",
    "build": "tsc",
    "start": "tsc&&node ./dist/index.js",
    "prisma": "npx prisma generate && npx prisma migrate dev --name init --preview-feature && npx prisma studio",
    "lint": "eslint .",
    "lint-fix": "eslint --ext .js,.ts src/ --fix",
    "format": "prettier --write src/**/*.{js,ts,json}",
    "lint&format": "yarn lint-fix && yarn format && npx prisma format",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/hpp": "^0.2.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "morgan": "^1.10.0",
    "prettier": "2.8.8",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@prisma/client": "^5.1.1",
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dayjs": "^1.11.7",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "http-status": "^1.6.2",
    "jsonwebtoken": "^9.0.1",
    "pino": "^8.14.1",
    "pino-pretty": "^10.0.0",
    "prisma": "^5.1.1",
    "redis": "^4.6.10",
    "rotating-file-stream": "^3.1.0",
    "zod": "^3.21.4"
  },
  "lint-staged": {
    "*.{js,ts,json}": "yarn lint&format"
  }
}
